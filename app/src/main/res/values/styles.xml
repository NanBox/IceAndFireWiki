<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--白天主题-->
    <style name="DayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">@android:color/white</item>
        <item name="pagerBackground">@android:color/white</item>
        <item name="darkTextColor">@color/color666666</item>
        <item name="lightTextColor">@android:color/white</item>
        <!--AppBarLayout图标颜色 通过透明度改变颜色-->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <!--夜间主题-->
    <style name="NightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color3F3F3F</item>
        <item name="colorPrimaryDark">@color/color3A3A3A</item>
        <item name="colorAccent">@color/color868686</item>
        <item name="colorBackground">@color/color4F4F4F</item>
        <item name="pagerBackground">@color/color3A3A3A</item>
        <item name="darkTextColor">@color/color9F9F9F</item>
        <item name="lightTextColor">@color/color9F9F9F</item>
        <!--AppBarLayout图标颜色 通过透明度改变颜色-->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <!--在MaterialSearchView中设置style属性可以自定义各种颜色-->
    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar-->
        <item name="searchBackground">?attr/colorBackground</item>
        <!-- Change voice icon-->
        <item name="searchVoiceIcon">@drawable/ic_action_voice_search_inverted</item>
        <!-- Change clear text icon-->
        <item name="searchCloseIcon">@drawable/ic_action_navigation_close_inverted</item>
        <!-- Change up icon-->
        <item name="searchBackIcon">@drawable/ic_action_navigation_arrow_back_inverted</item>
        <!-- Change icon for the suggestions-->
        <item name="searchSuggestionIcon">@drawable/ic_suggestion</item>
        <!-- Change background for the suggestions list view-->
        <item name="searchSuggestionBackground">@android:color/white</item>
        <!-- Change text color for edit text. This will also be the color of the cursor-->
        <item name="android:textColor">?attr/lightTextColor</item>
        <!-- Change hint text color for edit text-->
        <item name="android:textColorHint">?attr/darkTextColor</item>
        <!-- Hint for edit text-->
        <item name="android:hint">@string/search_hint</item>
    </style>

    <!--MaterialSearchView-->
    <style name="MSV_ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/search_icon_padding</item>
        <item name="android:paddingRight">@dimen/search_icon_padding</item>
    </style>

</resources>
